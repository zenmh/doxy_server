
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PATIENT
  DOCTOR
  ADMIN
  SUPER_ADMIN
}

enum Speciality {
  THYROID
  EYE
  NEUROLOGY
  CARDIOLOGY
  MEDICINE
  PSYCHIATRY
  DENTIST
  ORTHOPEDICS
  HAEMATOLOGY
  GYNAECOLOGY
}

enum Branch {
  BARISHAL
  CHATTOGRAM
  DHAKA
  KHULNA
  RAJSHAHI
  RANGPUR
  MYMENSINGH
  SYLHET
}

model User {
  id String @id @default(uuid())
  
  name String
  email String @unique
  password String
  role Role @default(PATIENT)
  contactNo String? @unique
  address String?
  profileImage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Doctor {
  id String @id @default(uuid())

  name String
  email String @unique
  password String
  role Role @default(DOCTOR)
  contactNo String? @unique
  address String?
  profileImage String?

  speciality Speciality
  experiences String
  practicing_branch String
  branch Branch @default(DHAKA)

  treatmentId String
  treatment Treatment @relation(fields: [treatmentId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("doctors")
}

model Treatment {
  id String @id @default(uuid())

  name Speciality
  slots String[]

  doctors Doctor[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("treatments")
}


